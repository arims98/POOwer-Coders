<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClienteController">
   <children>
      <Label text="Gestión de Clientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <HBox spacing="10">
         <children>
            <Button text="Añadir Cliente" onAction="#handleAddCliente" />
            <Button text="Mostrar Clientes" onAction="#handleShowClientes" />
            <Button text="Volver" onAction="#handleBack" />
         </children>
      </HBox>

      <TableView fx:id="clientesTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn text="NIF" fx:id="nifColumn" prefWidth="100" />
            <TableColumn text="Nombre" fx:id="nombreColumn" prefWidth="150" />
            <TableColumn text="Email" fx:id="emailColumn" prefWidth="150" />
            <TableColumn text="Domicilio" fx:id="domicilioColumn" prefWidth="200" />
            <TableColumn text="Tipo" fx:id="tipoColumn" prefWidth="100" />
         </columns>
      </TableView>

      <TextArea fx:id="outputArea" prefRowCount="5" editable="false" VBox.vgrow="NEVER" />
   </children>
</VBox>