<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" alignment="CENTER" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.MainController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text=" ONLINE STORE ">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    
    <Label fx:id="welcomeLabel" text="Cargando componentes..." />
    
    <Label text="MENÚ" style="-fx-font-weight: bold;" />
    
    <Button fx:id="btnArticulos" text="1. Gestión de Artículos" maxWidth="Infinity" 
            onAction="#handleGestionArticulos" />
            
    <Button fx:id="btnClientes" text="2. Gestión de Clientes" maxWidth="Infinity" 
            onAction="#handleGestionClientes" />
            
    <Button fx:id="btnPedidos" text="3. Gestión de Pedidos" maxWidth="Infinity" 
            onAction="#handleGestionPedidos" />
            
    <Button text="0. Salir" maxWidth="Infinity" style="-fx-background-color: #040000ff; -fx-text-fill: white;"
            onAction="#handleExit" />

</VBox>