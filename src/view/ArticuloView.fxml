<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ArticuloController">
   <children>
      <Label text="Gestión de Artículos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <HBox spacing="10">
         <children>
            <Button text="Añadir Artículo" onAction="#handleAddArticulo" />
            <Button text="Mostrar Artículos" onAction="#handleShowArticulos" />
            <Button text="Volver" onAction="#handleBack" />
         </children>
      </HBox>

      <TableView fx:id="articulosTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn text="Código" fx:id="codigoColumn" prefWidth="100" />
            <TableColumn text="Descripción" fx:id="descripcionColumn" prefWidth="200" />
            <TableColumn text="Precio Venta" fx:id="precioColumn" prefWidth="100" />
            <TableColumn text="Gastos Envío" fx:id="envioColumn" prefWidth="100" />
            <TableColumn text="Tiempo Prep." fx:id="tiempoColumn" prefWidth="100" />
         </columns>
      </TableView>

      <TextArea fx:id="outputArea" prefRowCount="5" editable="false" VBox.vgrow="NEVER" /> 
   </children>
</VBox>